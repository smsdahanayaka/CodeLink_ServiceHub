# ===========================================
# CodeLink ServiceHub - Environment Variables
# Copy this file to .env and fill in your values
# ===========================================

# Database Configuration (MySQL)
DATABASE_URL="mysql://root:password@localhost:3306/codelink_servicehub"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secret-key-here"

# App Configuration
NEXT_PUBLIC_APP_NAME="CodeLink ServiceHub"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# JWT Configuration
JWT_SECRET="generate-a-jwt-secret-here"

# Cron Job Security
CRON_SECRET="generate-a-secure-random-string-here"

# SMS Provider Configuration (Twilio)
SMS_PROVIDER="twilio"
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# Email Provider Configuration (SendGrid)
EMAIL_PROVIDER="sendgrid"
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL="noreply@yourcompany.com"
SENDGRID_FROM_NAME="CodeLink ServiceHub"

# Alternative: Email Configuration (SMTP - Nodemailer)
# EMAIL_PROVIDER="smtp"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@yourcompany.com"
SMTP_FROM_NAME="CodeLink ServiceHub"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"
